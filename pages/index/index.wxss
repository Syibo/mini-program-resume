/**index.wxss**/
.title {
  height: 90rpx;
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  /* padding-top: 44px; */
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  background-color: white;
}
.title image {
  width: 62rpx;
  height: 62rpx;
}
.con {
  margin-top: 188rpx;
}
.top {
  height: 102rpx;
  display: flex;
  padding: 20rpx 30rpx;
  justify-content: space-between;
  align-items: center;
  background-color: rgb(243, 243, 243);
}
.top image {
  width: 84rpx;
  height: 84rpx;
}
.mid {
  width: 100%;
  height: 790rpx;
  background-color: #c0e3e7;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.mid image {
  width: 380rpx;
  height: 380rpx;
}
.name {
  font-size: 52rpx;
  text-transform: uppercase;
  color: #010101;
  font-weight: 700;
  line-height: 1.1;
}
.dist {
  color: #757575;
  font-size: 32rpx;
}
.info {
  width: 550rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 100rpx;
}
.info image {
  width: 40rpx;
  height: 40rpx;
}