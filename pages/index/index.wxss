/**index.wxss**/
.title {
  height: 90rpx;
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  /* padding-top: 44px; */
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  background-color: white;
}
.title image {
  width: 62rpx;
  height: 62rpx;
}
.con {
  margin-top: 188rpx;
}
.top {
  height: 102rpx;
  display: flex;
  padding: 20rpx 30rpx;
  justify-content: space-between;
  align-items: center;
  background-color: rgb(243, 243, 243);
}
.top image {
  width: 84rpx;
  height: 84rpx;
}
.mid {
  width: 100%;
  height: 790rpx;
  background-color: #c0e3e7;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
.mid image {
  width: 380rpx;
  height: 380rpx;
  border-radius: 380rpx;
}
.name {
  font-size: 52rpx;
  text-transform: uppercase;
  color: #010101;
  font-weight: 700;
  line-height: 1.1;
}
.dist {
  color: #757575;
  font-size: 32rpx;
}
.info {
  width: 550rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 100rpx;
}
.info image {
  width: 46rpx;
  height: 46rpx;
}
.my {
  padding: 40rpx;
}
.my .about {
  text-transform: uppercase;
  font-size: 60rpx;
  font-weight: 700;
  color: #010101;
  padding: 50rpx 0;
}
.my .hello {
  font-size: 32rpx;
  font-weight: 700;
  color: #010101;
  margin-bottom: 9rpx;
}
.my .introduce {
  font-size: 32rpx;
  color: #010101;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  line-height: 52rpx;
}
.my .signature {
  display: flex;
  flex-direction: row-reverse;
}
.my .signature image {
  width: 150rpx;
  height: 150rpx;
  margin: 50rpx 0;
}
.line {
  width: 670rpx;
  height: 1rpx;
  background-color: #e6e6e6;
  margin: 0 auto;
}
.personal {
  color: #757575;
  font-weight: 400;
  font-size: 32rpx;
  padding: 50rpx 0;
}