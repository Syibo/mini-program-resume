/* pages/nanhua/nanhua.wxss */
.title {
  height: 90rpx;
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  /* padding-top: 44px; */
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  background-color: white;
}
.title image {
  width: 62rpx;
  height: 62rpx;
}
.title .nameimg {
  width: 142rpx;
  height: 82rpx;
  margin-left: 20rpx;
  margin-top: 8rpx;
}
.con {
  background-color: white;
}
.swiper-container {
  background-color: white;
  margin-bottom: 60rpx;
}
.swiper-item {
  padding: 0 20rpx;
}
.swiper-item .swiper-item-cont {
  border-radius: 20rpx;
  height: 500px;
  background-color: #313552;
  color: white;
}
.swiper-item-cont image {
  width: 100%;
  height: 350rpx;
}
.biaot {
  font-size: 40rpx;
  font-weight: 700;
  color: #010101;
  padding: 0 0 0 30rpx;
}
.introduce {
  text-indent: 2em;
  font-size: 32rpx;
  color: #010101;
  font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
  line-height: 52rpx;
  padding: 0 30rpx;
}
swiper {
  height: 500px;
}
swiper-item {
  height: 500px;
}
.time {
  color: #FFC576;
  font-size: 24rpx;
  line-height: 32rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}
.time1 {
  font-size: 48rpx;
  line-height: 56rpx;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 0;
}
.time3 {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: normal;
  letter-spacing: 0;
  line-height: 52rpx;
  margin-top: 30rpx;
}
.time2 {
  border-radius: 10rpx;
  transition: 0.3s;
  -webkit-transition: 0.3s;
  -moz-transition: 0.3s;
  -o-transition: 0.3s;
  color: #FFC576;
  border: 1px solid #FFC576;
  background: transparent;
  cursor: pointer;
  letter-spacing: 0;
  font-size: 28rpx;
  line-height: 36rpx;
  font-weight: 600;
  display: inline-block;
  text-transform: uppercase;
  padding: 20rpx 48rpx;
  margin-top: 30rpx;
}

.project{
  border-bottom: dashed 1px #999;
  padding: 30rpx;
}
.project-name{
  font-size: 18px;
  margin-bottom: 10px;
}
.desc{
  color: #999;
  line-height: 1.5;
}
